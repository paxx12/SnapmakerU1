#!/bin/sh

NAME="tailscaled"
USER="root"
DAEMON="/usr/sbin/tailscaled"
PIDFILE="/var/run/$NAME.pid"
STATE_DIR="/home/lava/printer_data/tailscale"

# Load config from user
EXTENDED_CFG="/home/lava/printer_data/config/extended/extended.cfg"
TAILSCALE_ENABLED=$(/usr/local/bin/extended-config.py "$EXTENDED_CFG" tailscale enabled false)

# Skip when not enabled
[ "$TAILSCALE_ENABLED" = "true" ] || exit 0

start() {
    printf "Starting $NAME: "

    if [ -f "$PIDFILE" ] && kill -0 "$(cat "$PIDFILE")" 2>/dev/null; then
        echo "already running"
        return 0
    fi

    mkdir -p "$STATE_DIR"

    start-stop-daemon -S -b -m \
        -p "$PIDFILE" \
        -c "$USER" \
        -x "$DAEMON" -- \
        --state="$STATE_DIR/tailscaled.state" \
        --tun=userspace-networking

    echo "OK"
}

stop() {
    printf "Stopping $NAME: "
    if [ -f "$PIDFILE" ]; then
        start-stop-daemon -K -p "$PIDFILE" -s TERM
        rm -f "$PIDFILE"
        # like tailscales systemd unit, run a cleanup
        $DAEMON --cleanup

        echo "OK"
    else
        echo "not running"
    fi
}

restart() {
    stop
    sleep 1
    start
}

case "$1" in
    start) start ;;
    stop) stop ;;
    restart|reload) restart ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit $?